#!/bin/bash
if [ "$1" == "--help" -o "$1" == "-h" ]; then
    echo "Git Commit toolkit"
    echo "options:"
    echo " * -h | --help   show this message"
    echo " * -d | --dont   don't unstage the files before firing \`git diff\`"
    exit 1
fi
clear
if [ "$1" != '-d' -a "$1" != '--dont' ]; then
    shift
    git unstage $@
fi
if (( $# > 0 )); then
    while (( $# > 0 )); do
	_file=$1
	shift
	gd $_file
	git add $_file
    done
else
    gd
    git add -A
fi
printf "\033[0;37mCommit message: \033[0m"
read -r
git commit -m "$REPLY"
